{% extends "base.html.twig" %}

{% block body %}
    <section id="showcase" style="min-height: 450px;" class="d-flex justify-content-center align-items-center">
        <div id="overlay"></div>
        <div id="header" class="container text-white text-center">
            <h3 class="display-5 mb-0">Publications</h3>
            <h1 class="display-3">Jean Forteroche</h1>
        </div>
    </section>
    <section class="my-4">
        <div class="container">

            <div class="row mb-3">

                <!-- Blog Entries Column -->
                <div class="col-md-8">
                    {#                    {{ dump(chapters) }}#}
                    <!-- First Blog Post -->
                    {% for chapter in chapters %}
                        <div class="card card-body mb-3">

                            <h4><a href="index.php?action=showChapter&id={{ chapter.id }}">{{ chapter.title |raw }}</a>
                            </h4>
                            <div class="bg-light p-2 mb-3">publie le {{ chapter.content_date|date("d/m/Y") }} par <span>Jean Forteroche</span>
                            </div>

                            <img class="img-fluid" src="https://picsum.photos/id/{{ chapter.id + photoId }}/730/250"
                                 alt="">

                            <p class="card-text">
                                {{ chapter.content |slice(0,500)|raw }}...
                            </p>

                            <a class="btn btn-sm btn-primary" href="index.php?action=showChapter&id={{ chapter.id }}"><i
                                        class="fas fa-angle-double-down"></i> Voir plus
                            </a>
                        </div>
                    {% endfor %}


                    <!-- Pager -->

                    <ul class="pager d-flex">
                        <li class="previous nav-link">
                            <a href="#">&larr; Ancien</a>
                        </li>
                        <li class="next nav-link">
                            <a href="#">Nouveau &rarr;</a>
                        </li>
                    </ul>

                </div>

                <!-- Blog Sidebar Widgets Column -->
                <div class="col-md-4">

                    <!-- Blog Search Well -->
                    <div class="well py-2">
                        <h4>Trouver Chapitre</h4>
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <button class="btn btn-primary" type="button">Trouver
                            </button>

                        </div>
                        <!-- /.input-group -->
                    </div>

                    <!-- Blog Categories Well -->
                    <div class="well mt-5 py-2">
                        <h4>Blog Chapitres</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-unstyled">
                                    {% for chapter in chapters %}
                                        <li><a href="#">{{ chapter.title|raw }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>

                            </div>
                            <div class="socialCustom">
                                <div class="wrapper">
                                    <ul>
                                        <li class="facebook">
                                            <i class="fa fa-facebook" aria-hidden="true"></i>
                                            <div class="slider">
                                                <p>facebook</p>
                                            </div>
                                        </li>
                                        <li class="twitter">
                                            <i class="fa fa-twitter" aria-hidden="true"></i>
                                            <div class="slider">
                                                <p>twitter</p>
                                            </div>
                                        </li>
                                        <li class="instagram">
                                            <i class="fa fa-instagram" aria-hidden="true"></i>
                                            <div class="slider">
                                                <p>instagram</p>
                                            </div>
                                        </li>
                                        <li class="google">
                                            <i class="fa fa-google" aria-hidden="true"></i>
                                            <div class="slider">
                                                <p>google</p>
                                            </div>
                                        </li>
                                        <li class="whatsapp">
                                            <i class="fa fa-whatsapp" aria-hidden="true"></i>
                                            <div class="slider">
                                                <p>whatsapp</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- /.row -->
                    </div>


                </div>
            </div>


        </div>
        <!-- /.row -->

        <hr>

    </section>


    <section>
        <div class="container text-center mt-5">
            <h3>LES AUTRES OUVRAGES</h3>
            <h5 class="text-primary">#JEANFORTEROCHE</h5>
            <div class="row mt-4">
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social1.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social2.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social3.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social4.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social5.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social6.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social7.png" alt="">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social8.png" alt="">
                </div>
            </div>
        </div>
    </section>




{% endblock %}
