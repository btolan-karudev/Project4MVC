{% extends "base.html.twig" %}

{% block body %}
    <section id="showcase" style="min-height: 750px;" class="d-flex justify-content-center align-items-center">
        <div id="overlay"></div>
        <div id="header" class="container text-white text-center">
            <h3 class="display-5 my-5">Publications</h3>
            <h1 class="display-3">Jean Forteroche</h1>
        </div>
    </section>
    <section class="my-4">
        <div class="container">

            <div class="row my-5">

                <div class="col-md-8">

                    {% for chapter in chapters %}
                        <div class="card card-body my-5">

                            <h4><a href="index.php?action=showChapter&id={{ chapter.id }}">{{ chapter.title |raw }}</a>
                            </h4>
                            <div class="bg-light p-2 mb-3">publi√© le {{ chapter.content_date|date("d/m/Y") }} par <span>Jean Forteroche</span>
                            </div>

                            <img class="img-fluid" src="https://picsum.photos/id/{{ chapter.id + photoId }}/730/250"
                                 alt="">

                            <p class="card-text  mt-2 py-2 text-justify">
                                {{ chapter.content |slice(0,500)|raw }}...
                            </p>

                            <a class="btn btn-sm btn-primary" href="index.php?action=showChapter&id={{ chapter.id }}"><i
                                        class="fas fa-angle-double-down"></i> Voir plus
                            </a>
                        </div>
                    {% endfor %}

                </div>

                <div class="col-md-4 my-5">

                    <div class="card">
                        <div class="card-body">
                            <h4>Chapitres</h4>
                            <div class="col-lg-12">
                                <ul class="list-unstyled">
                                    {% for chapter in chapters %}
                                        <li>
                                            <a href="index.php?action=showChapter&id={{ chapter.id }}">{{ chapter.title|raw }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <hr>

    </section>

    <section>
        <div class="container text-center my-5">
            <h3>LES AUTRES OUVRAGES</h3>
            <h5 class="text-primary">#JEANFORTEROCHE</h5>
            <div class="row mt-4">
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social1.png" alt="social1">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social2.png" alt="social2">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social3.png" alt="social3">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social4.png" alt="social4">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social5.png" alt="social5">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social6.png" alt="social6">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social7.png" alt="social7">
                </div>
                <div class="col-6 col-lg-3 mb-4">
                    <img class="img-fluid" src="/images/gallery/social8.png" alt="social8">
                </div>
            </div>
        </div>
    </section>

{% endblock %}
